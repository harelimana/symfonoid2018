{% extends 'news/layout.html.twig' %}
{% block container %}
    <div class="container">
        <div class="row">
            <div class="media">
                <img class="mr-3" src="http://placekitten.com/g/450/300" alt="Image" />
                <div class="media-body">
                    <h4 class="mt-0">{{ article.title }} (id: {{ article.id }})</h4>
                    {{ article.text }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}