<div class="col-sm-6 col-md-4">
    <div class="card mb-4">
        <img class="card-img-top" src="{{ article.image }}" alt="image" />
        <div class="card-body">
            <h5 class="card-title">{{ article.title }}</h5>
            <p class="card-text">{{ article.text | slice(0,100) }}(...)</p>
            <a href="{{ path('news_detail_article', {'id':id}) }}" class="card-link">Lire la suite</a>
        </div>
    </div>
</div>